
{
  "name": "Snips.ai",
  "version": "5.2",
  "slug": "snips.ai",
  "description": "A local voice control platform. The base of a satelite setup.",
  "url": "https://github.com/Poeschl/Hassio-Addons/tree/master/snips.ai",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64"
  ],
  "startup": "application",
  "boot": "auto",
  "image": "poeschl/hassio-snipsai-{arch}",
  "map": ["share:rw"],
  "services": ["mqtt:need"],
  "homeassistant_api": true,
  "schema": {
    "mqtt": {
      "host": "match(^([^/\\s])+(\\.[^/\\s]+)?$)",
      "port": "port",
      "user": "str",
      "password": "str"
    },
    "assistant": "match(^.+\\.zip$)"
  },
  "options": {
    "mqtt": {
      "host": "localhost",
      "port": 1883,
      "user": "",
      "password": ""
    },
    "assistant": "assistant.zip"
  }
}
